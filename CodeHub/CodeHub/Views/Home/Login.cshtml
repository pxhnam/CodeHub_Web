@using CodeHub.Models
@model CodeHub.Models.Manager
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>LOGIN</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <style>
        .validation-summary-errors.text-danger ul{
            padding: 0;
        }
    </style>
    <div class="authentication-theme auth-style_1">
        <div class="row">
            <div class="col-12 logo-section">
                <a href="#" class="logo">
                    <img src="/Content/images/logo.svg" alt="logo" />
                </a>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-5 col-md-7 col-sm-9 col-11 mx-auto">
                <div class="grid">
                    <div class="grid-body">
                        <div class="row">
                            <div class="col-lg-7 col-md-8 col-sm-9 col-12 mx-auto form-wrapper">
                                @*<form action="~/home/login" method="post"></form>*@
                                @using (Html.BeginForm("Login", "Home", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "", role = "form" }))
                                {
                                    @Html.AntiForgeryToken()

                                    <div class="form-group input-rounded">
                                        @*<input type="text" name="username" class="form-control" placeholder="Username" />*@
                                        @Html.TextBoxFor(m => m.Username, new { @class = "form-control", placeholder = "Input Email or Username", autocomplete = "off", id = "usernameInput" })
                                        @Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="form-group input-rounded">
                                        @*<input type="password" name="password" class="form-control" placeholder="Password" />*@
                                        @Html.PasswordFor(m => m.PasswordHash, new { @class = "form-control", placeholder = "Password" })
                                        @Html.ValidationMessageFor(m => m.PasswordHash, "", new { @class = "text-danger" })
                                    </div>
                                    @Html.ValidationSummary(true, "", new { @class = "text-danger text-center" })
                                    <button type="submit" class="btn btn-primary btn-block"> Login </button>
                                }
                                <div class="signup-link">
                                    <p>Don't have an account yet?</p>
                                    <a href="#">Sign Up</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="auth_footer">
            <p class="text-muted text-center">© LOR Team Inc @DateTime.Now.Year</p>
        </div>
    </div>
    <!--page body ends -->
    <!-- SCRIPT LOADING START FORM HERE /////////////-->
    @Scripts.Render("~/bundles/core")
    @Scripts.Render("~/bundles/addons")
    @Scripts.Render("~/bundles/template")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/jqueryval")
    <!-- endbuild -->
    <script type="text/javascript">
        $(document).ready(function () {
            $('#usernameInput').focus();
        });
    </script>
</body>
</html>